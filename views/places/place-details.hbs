<div class="container">
    <h1>{{name}} Details</h1>
    <hr>
    <div class="row justify-content-between">

        <div class="col-md-4 ">
            <div class="btn-group">
                <form action="/places/{{id}}/delete" method="POST">
                    <button type="submit" class="btn btn-danger btn-lg mr-2">Eliminar</button>
                </form>
                <br>
                <a class="btn btn-primary btn-lg" href="/places/{{id}}/edit">Editar</a>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-8 flex-row">
            <h3>{{type}}</h3>
        </div>
        <div class="col-md-4">
            <hr>
            <h6><strong>Ubicaci√≥n</strong>:</h6>
            <hr>
            <p><strong>Latitud</strong>: {{location.coordinates.[0]}}</p>
            <p><strong>Longitud</strong>: {{location.coordinates.[1]}}</p>
        </div>
    </div>

    <hr>

    <a href="/places" class=" btn btn-dark">Volver al listado</a>
</div>